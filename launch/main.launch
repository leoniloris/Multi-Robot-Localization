<launch>
  <param name="/use_sim_time" value="true" />

  <arg name="n_robots"/>
  <!-- start world -->
  <node name="gazebo" pkg="gazebo_ros" type="gazebo"
   args="$(find multi_robot)/worlds/hospital.world" respawn="false" output="screen" />

  <!-- include our robots -->
  <include file="$(find multi_robot)/launch/robots.launch">
    <arg name="n_robots" value="$(arg n_robots)"/>

  </include>
</launch>
